<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/add-collection" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-3">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Created</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each games}}
    <tr>
      <th scope="row">{{this.num}}</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.created}}</td>
      <td><img src="/images/{{this._id}}.jpg" style="width:50px;height:50px" alt=""></td>
      <td>
        <a href="/admin/delete-collection?id={{this._id}}" onclick="return confirm('Please confirm you are deleting {{this.name}}')">Delete</a><br/>
        <a href="/admin/edit-collection?id={{this._id}}">Edit</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>