
<div class="container mt-2">
    <h1 class="text-primary">Edit Collection</h1>
<form method="POST" action="/admin/edit-collection?id={{colDetail._id}}" enctype="multipart/form-data">
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" name="name" id="name" value="{{colDetail.name}}" placeholder="Enter Name">
  </div>
  <div class="form-group">
    <label>Category</label>
    <input type="text" class="form-control" name="category" id="category" value="{{colDetail.category}}" placeholder="Enter Category">
  </div>

  <div class="form-group">
    <label>Created By</label>
    <input type="text" class="form-control" name="created" id="created" value="{{colDetail.created}}" placeholder="Created By">
  </div>

  <div class="form-group">
    <label>Price</label>
    <input type="text" class="form-control" name="price" id="price" value="{{colDetail.price}}" placeholder="Enter Price">
  </div>

  <div class="form-group">
    <img  src="/images/{{colDetail._id}}.jpg" style="width:50px;height:auto" id="imgview"><br/>
    <label for="exampleFormControlFile1">Edit Image</label>
    <input type="file" class="form-control-file" name="image" id="exampleFormControlFile1" onchange="viewImg(event)">
  </div>
  
  <button type="submit" class="btn btn-success">Update</button>
</form>
</div>

<script>
  function viewImg(event){
    document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0])
  }
</script>